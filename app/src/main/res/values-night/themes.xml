<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTextview" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/custom_primary</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/t10</item>
    </style>

    <style name="CustomProgressBar">
        <item name="colorAccent">@color/red_light</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:padding">@dimen/space10</item>
        <item name="strokeWidth">0dp</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="CustomButtonBorderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/custom_primary</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>